package com.tupple.institute.rest.client;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.web.client.RestTemplateBuilder;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.tupple.institute.rest.model.GetStudetListResponse;
import com.tupple.institute.rest.model.GetEmployeetListResponse;

@Service
public class StudentEmpClient {
	
	RestTemplate restTemplet;
	
	public StudentEmpClient (RestTemplateBuilder restTemplateBuilder) {
		this.restTemplet = restTemplateBuilder.build();
	}
	
	public GetStudetListResponse getStudentList() {
		
		
		String url = "http://localhost:8081/msapi/student/list";
		GetStudetListResponse response = restTemplet.getForObject(url, GetStudetListResponse.class);
		
		return response; 
		
	}
	

}
